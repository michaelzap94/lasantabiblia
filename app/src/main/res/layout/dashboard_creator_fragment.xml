<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".fragments.dashboard.DashboardCreatorFragment">


    <TextView
        android:id="@+id/dash_creator_fragment_name_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dash_creator_fragment_name_txtview"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dash_creator_fragment_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/dash_creator_fragment_color_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dash_creator_fragment_color_txtview"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dash_creator_fragment_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/dash_creator_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dash_creator_fragment_button" />
</LinearLayout>